<div class="container">
<p style="color: green"><%= notice %></p>

<h1>Lists</h1>

<div id="lists">
  <% @lists.each do |list| %>
    <%= render list %>
    <p>
      <%= link_to "Show this list", list, class:"btn btn-outline-info" %>
      <%= link_to "Delete this list", list_path(list), data: {turbo_method: :delete, turbo_confirm: "Are you sure ?"}, class:"btn btn-outline-danger" %>
    </p>
  <% end %>
</div>

<%= link_to "New list", new_list_path, class:"btn btn-outline-success" %>
<%= link_to "Back to the movies", movies_path, class:"btn btn-outline-primary" %>
</div>
