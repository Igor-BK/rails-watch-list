<h2><%= @list.name %></h2>
<ul>
<% @list.bookmarks.each do |bookmark| %>
<li> <%= bookmark.movie.title %></li>
<li><%= bookmark.movie.rating %></li>
<li><%= bookmark.movie.overview %></li>
<li><%= bookmark.comment %></li>
 <%= link_to "Delete this movie", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure ?"}  %>
<% end %>
</ul>
<%= link_to "Back to lists ?", lists_path %>
<%= link_to "Add movies to the lists ?", new_list_bookmark_path(@list) %>
