<div class="container">
  <p style="color: green"><%= notice %></p>

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://img.freepik.com/vecteurs-libre/bande-film-fond-cinema-effet-lumiere_1017-38171.jpg?w=1380&t=st=1708698351~exp=1708698951~hmac=20eaab574fa9678b4c31fa031b8114f59af8bc5ea728d0a56328181769587d0f);">

     <h1><strong>Movie</strong></h1>
    <p>Change your life and see all movies in the world.</p>
  </div>
</div>

<div class="container">
  <div id="movies">
    <% @movies.each do |movie| %>
      <div class="card">
        <img class="card-img-top" src="<%= movie.poster_url %>" alt="<%= movie.title %>">
        <div class="card-body">
          <h5 class="card-title"><%= movie.title %></h5>
          <p class="card-text"><%= movie.overview  %></p>
        </div>
      </div>
      <p>
        <%= link_to "Show this movie", movie, class:"btn btn-outline-info" %>
      </p>
    <% end %>
  </div>

  <%= link_to "Go to your lists", lists_path, class:"btn btn-outline-primary" %>
</div>
